---
import Base from './Base.astro';
import Sidebar from '../components/layout/Sidebar.astro';
import Icon from '../components/ui/Icon.astro';

interface Props {
  title: string;
  module?: string;
}

const { title, module } = Astro.props;
---

<Base title={title}>
  <Sidebar />
  <main class="main">
    <header class="header">
      <nav class="breadcrumb">
        <a href="/">Inicio</a>
        {module && (
          <>
            <Icon name="chevron-right" size={14} />
            <span>{module}</span>
          </>
        )}
        <Icon name="chevron-right" size={14} />
        <span class="current">{title}</span>
      </nav>
    </header>
    <article class="content">
      <slot />
    </article>
  </main>
</Base>

<style>
  .main {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .header {
    height: 56px;
    padding: 0 32px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--border);
    flex-shrink: 0;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
  }

  .breadcrumb a {
    color: var(--text-secondary);
  }

  .breadcrumb a:hover {
    color: var(--text-primary);
  }

  .breadcrumb .current {
    color: var(--text-primary);
    font-weight: 500;
  }

  .content {
    flex: 1;
    overflow-y: auto;
    padding: 40px;
    max-width: 900px;
  }

  .content :global(h1) {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 24px;
    line-height: 1.2;
  }

  .content :global(h2) {
    font-size: 24px;
    font-weight: 600;
    margin-top: 40px;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border);
  }

  .content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    margin-top: 32px;
    margin-bottom: 12px;
  }

  .content :global(p) {
    font-size: 17px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .content :global(li) {
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 8px;
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 24px 0;
    font-size: 15px;
  }

  .content :global(th) {
    background: var(--bg-tertiary);
    padding: 12px 16px;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid var(--border);
  }

  .content :global(td) {
    padding: 12px 16px;
    border-bottom: 1px solid var(--border);
    color: var(--text-secondary);
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--accent);
    background: rgba(88, 166, 255, 0.08);
    padding: 16px 20px;
    margin: 24px 0;
    border-radius: 0 8px 8px 0;
  }

  .content :global(blockquote p) {
    margin: 0;
    color: var(--text-primary);
  }

  .content :global(hr) {
    border: none;
    height: 1px;
    background: var(--border);
    margin: 32px 0;
  }

  .content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }
</style>
