---
import Icon from '../ui/Icon.astro';
import NeuralBackground from '../ui/NeuralBackground.astro';
---

<section class="hero-section">
    <!-- Dynamic Background -->
    <div class="bg-layer">
        <NeuralBackground
            style="position: absolute; inset: 0; z-index: 0;"
            color="#3b82f6"
            speed={0.5}
            particleCount={600}
            trailOpacity={0.4}
        />
        <!-- Radial fade at the bottom to blend with next section -->
        <div class="bottom-fade"></div>
    </div>

    <div class="hero-content">


        <h1 class="hero-title">
            Engenharia de <br class="mobile-break" />
            <span class="highlight">Baixo Nível</span>
        </h1>
        
        <p class="hero-desc">
            Uma jornada profunda do silício ao software. 
            Domine C, Assembly e Arquitetura de Computadores sem abstrações mágicas.
        </p>
        
        <div class="cta-group">
            <a href="/historia-programacao/" class="btn btn-primary">
                <span>Iniciar Jornada</span>
                <Icon name="arrow-right" size={18} />
                <div class="btn-glow"></div>
            </a>
            <a href="/playground/" class="btn btn-glass">
                <Icon name="code" size={18} />
                <span>Playground</span>
            </a>
        </div>

        <div class="tech-strip">
            <div class="tech-item">
                <Icon name="cpu" size={16} />
                <span>Memory</span>
            </div>
            <div class="divider"></div>
            <div class="tech-item">
                <Icon name="server" size={16} />
                <span>SysCalls</span>
            </div>
            <div class="divider"></div>
            <div class="tech-item">
                <Icon name="layers" size={16} />
                <span>Kernel</span>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: #050505;
        padding-top: 80px; /* Offset for fixed header */
    }

    .bg-layer {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .bottom-fade {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 200px;
        background: linear-gradient(to bottom, transparent, #050505);
        z-index: 1;
        pointer-events: none;
    }

    .hero-content {
        position: relative;
        z-index: 10;
        width: 100%;
        max-width: 1000px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 0 24px;
        /* Optimized for Speed Index - faster animation */
        opacity: 0.01;
        animation: fadeUp 0.3s ease-out forwards;
    }



    /* Typography */
    .hero-title {
        font-family: 'Inter', sans-serif;
        font-size: clamp(3.5rem, 8vw, 6rem);
        line-height: 1.1;
        font-weight: 800;
        letter-spacing: -0.04em;
        margin: 32px 0 24px;
        color: #fff;
    }

    .highlight {
        background: linear-gradient(to right, #60a5fa, #c084fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-desc {
        font-family: 'Inter', sans-serif;
        font-size: clamp(1.1rem, 2vw, 1.25rem);
        color: #a1a1aa;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto 48px;
        font-weight: 400;
    }

    /* Buttons */
    .cta-group {
        display: flex;
        gap: 16px;
        margin-bottom: 64px;
    }

    .btn {
        height: 52px;
        padding: 0 28px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    /* Primary Button */
    .btn-primary {
        background: #fff;
        color: #000;
        border: 1px solid #fff;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    }
    
    .btn-glow {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: linear-gradient(45deg, transparent, rgba(255,255,255,0.8), transparent);
        transform: translateX(-100%);
        transition: transform 0.6s;
    }
    
    .btn-primary:hover .btn-glow {
        transform: translateX(100%);
    }

    /* Glass Button */
    .btn-glass {
        background: rgba(255, 255, 255, 0.05);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .btn-glass:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    /* Tech Strip */
    .tech-strip {
        display: flex;
        align-items: center;
        gap: 24px;
        padding: 12px 24px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 100px;
        backdrop-filter: blur(10px);
    }

    .tech-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #71717a;
        font-size: 0.85rem;
        font-weight: 500;
        font-family: 'JetBrains Mono', monospace;
        transition: color 0.3s;
    }

    .tech-item:hover {
        color: #e4e4e7;
    }

    .divider {
        width: 1px;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
    }

    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 768px) {
        .mobile-break { display: block; }
        .hero-title { font-size: 3rem; }
        .cta-group { flex-direction: column; width: 100%; max-width: 320px; }
        .btn { width: 100%; justify-content: center; }
        .tech-strip { display: none; }
    }
</style>
