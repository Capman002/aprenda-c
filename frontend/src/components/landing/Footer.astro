---
import { SITE, NAVIGATION } from '../../site.config';
import Icon from '../ui/Icon.astro';

const footerLinks = [
    { title: "Plataforma", links: [
        { label: "Curso Completo", href: NAVIGATION[0].href },
        { label: "Playground", href: "/playground" }
    ]},
    { title: "Recursos", links: [
        { label: "GitHub do Projeto", href: SITE.github },
        { label: "Apoie o Projeto", href: "https://github.com/sponsors/Capman002" }
    ]}
];
---

<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <div class="brand-col">
                <span class="logo">{SITE.title}</span>
                <p>Engenharia de Baixo Nível para quem não aceita abstrações mágicas.</p>
                <div class="socials">
                    <a href="https://github.com/Capman002/aprenda-c" class="social-link" target="_blank" rel="noopener noreferrer"><Icon name="github" size={20}/></a>
                    <a href="https://github.com/sponsors/Capman002" class="social-link donate-btn" target="_blank" rel="noopener noreferrer" title="Apoiar o Projeto">
                        <Icon name="heart" size={20}/> <span>Apoie o Projeto</span>
                    </a>
                </div>
            </div>

            <div class="links-col">
                {footerLinks.map(group => (
                    <div class="link-group">
                        <h4>{group.title}</h4>
                        <ul>
                            {group.links.map(link => (
                                <li><a href={link.href}>{link.label}</a></li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; {new Date().getFullYear()} {SITE.author}. Code is Law.</p>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background: #020202;
        border-top: 1px solid rgba(255,255,255,0.05);
        padding: 80px 24px 24px;
        font-family: 'Inter', sans-serif;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        gap: 60px;
        margin-bottom: 80px;
        flex-wrap: wrap;
    }

    .brand-col {
        max-width: 300px;
    }

    .logo {
        color: #fff;
        font-weight: 800;
        font-size: 1.5rem;
        display: block;
        margin-bottom: 16px;
        letter-spacing: -0.02em;
    }

    .brand-col p {
        color: #71717a;
        line-height: 1.6;
        margin-bottom: 24px;
        font-size: 0.95rem;
    }

    .socials {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .social-link {
        min-width: 40px;
        width: fit-content;
        height: 40px;
        background: rgba(255,255,255,0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        color: #a1a1aa;
        transition: all 0.2s;
        text-decoration: none;
    }

    .social-link:hover {
        background: #fff;
        color: #000;
    }

    .donate-btn {
        min-width: unset;
        width: auto;
        padding: 0 16px;
        gap: 8px;
        font-size: 14px;
        font-weight: 600;
        white-space: nowrap;
    }

    .donate-btn:hover {
        background: rgba(0, 158, 227, 0.1);
        color: #009ee3;
        border-color: rgba(0, 158, 227, 0.2);
    }

    .links-col {
        display: flex;
        gap: 60px;
        flex-wrap: wrap;
    }

    .link-group h4 {
        color: #fff;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .link-group ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .link-group a {
        color: #a1a1aa;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

    .link-group a:hover {
        color: #fff;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255,255,255,0.05);
        padding-top: 24px;
        text-align: center;
    }

    .footer-bottom p {
        color: #52525b;
        font-size: 0.8rem;
    }
    
    @media (max-width: 768px) {
        .site-footer {
            padding: 48px 20px 24px;
        }

        .footer-content {
            flex-direction: column;
            gap: 48px;
            margin-bottom: 48px;
        }

        .brand-col {
            max-width: 100%;
        }

        .links-col {
            gap: 32px;
            display: grid;
            grid-template-columns: 1fr 1fr;
        }

        .link-group h4 {
            margin-bottom: 16px;
        }
    }
</style>
