---
import Icon from '../ui/Icon.astro';

const phases = [
    {
        phase: "Fase 01",
        title: "Fundamentos & Base",
        desc: "Os alicerces da computação. Entenda como o hardware conversa com o software.",
        modules: [
            "Contexto Histórico e Evolução",
            "Fundamentos (Binário/Hex)",
            "Ambiente Linux & GCC"
        ]
    },
    {
        phase: "Fase 02",
        title: "Mastering C",
        desc: "Domine a linguagem que construiu o mundo moderno.",
        modules: [
            "Ponteiros & Gestão de Memória",
            "Stack vs Heap",
            "Estruturas de Dados Manuais"
        ]
    },
    {
        phase: "Fase 03",
        title: "Engenharia Real",
        desc: "Saia do sandbox. Construa drivers e sistemas embarcados.",
        modules: [
            "Embedded com ESP32",
            "Git Workflow Profissional",
            "Arquitetura de Sistemas"
        ]
    }
];
---

<section class="curriculum-section">
    <div class="container">
        <div class="header">
            <span class="eyebrow">A Jornada</span>
            <h2>Grade <span class="highlight">Curricular</span></h2>
        </div>

        <div class="timeline">
            <!-- Central Line -->
            <div class="line"></div>

            {phases.map((phase, index) => (
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content glass-card">
                        <div class="phase-badge">{phase.phase}</div>
                        <h3>{phase.title}</h3>
                        <p class="phase-desc">{phase.desc}</p>
                        
                        <ul class="module-list">
                            {phase.modules.map((mod) => (
                                <li>
                                    <Icon name="check-circle" size={16} class="check-icon" />
                                    <span>{mod}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>

        <div class="cta-container">
            <a href="/course/01-contexto-historico/01-historia-programacao" class="btn-glow">
                Ver Grade Completa
            </a>
        </div>
    </div>
</section>

<style>
    .curriculum-section {
        padding: 120px 24px;
        background: #050505;
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .header {
        text-align: center;
        margin-bottom: 80px;
    }

    .eyebrow {
        color: #a1a1aa;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.9rem;
        margin-bottom: 12px;
        display: block;
    }

    h2 {
        font-size: 3rem;
        font-weight: 800;
        color: #fff;
        margin: 0;
    }

    .highlight {
        color: #3b82f6;
        text-shadow: 0 0 30px rgba(59,130,246,0.3);
    }

    /* Timeline */
    .timeline {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 60px;
        margin-bottom: 80px;
    }

    .line {
        position: absolute;
        left: 24px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, transparent, #333, transparent);
        z-index: 0;
    }

    .timeline-item {
        position: relative;
        padding-left: 80px;
    }

    .timeline-marker {
        position: absolute;
        left: 17px;
        top: 24px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: #050505;
        border: 2px solid #3b82f6;
        box-shadow: 0 0 10px rgba(59,130,246,0.5);
        z-index: 1;
    }

    .timeline-content {
        transition: transform 0.3s ease;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 32px;
        backdrop-filter: blur(10px);
    }

    .glass-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        transform: translateX(8px);
    }

    /* Typography inside Card */
    .phase-badge {
        display: inline-block;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        color: #60a5fa;
        background: rgba(59, 130, 246, 0.1);
        padding: 4px 8px;
        border-radius: 4px;
        margin-bottom: 12px;
    }

    h3 {
        font-size: 1.5rem;
        color: #fff;
        margin: 0 0 8px;
        font-weight: 700;
    }

    .phase-desc {
        color: #a1a1aa;
        margin: 0 0 24px;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .module-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .module-list li {
        display: flex;
        align-items: center;
        gap: 12px;
        color: #e4e4e7;
        font-size: 0.95rem;
    }

    .check-icon {
        color: #3b82f6;
        flex-shrink: 0;
    }

    /* CTA */
    .cta-container {
        text-align: center;
    }
    
    .btn-glow {
        display: inline-block;
        padding: 14px 32px;
        background: #fff;
        color: #000;
        font-weight: 600;
        border-radius: 99px;
        text-decoration: none;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
        transition: all 0.3s;
    }
    
    .btn-glow:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.4);
    }

    @media (max-width: 768px) {
        .timeline-item {
            padding-left: 0;
            padding-top: 40px;
        }

        .line {
            display: none;
        }

        .timeline-marker {
            display: none;
        }

        h2 { font-size: 2.5rem; }
    }
</style>
