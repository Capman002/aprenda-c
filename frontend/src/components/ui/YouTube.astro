---
interface Props {
  id: string;
  title?: string;
  start?: number;
}

const { id, title = "YouTube Video", start } = Astro.props;

const params = new URLSearchParams({
  hl: 'pt-BR',
  cc_lang_pref: 'pt',
  rel: '0',
});

if (start) {
  params.append('start', start.toString());
}
---

<div class="video-container">
  <iframe
    src={`https://www.youtube.com/embed/${id}?${params.toString()}`}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
  ></iframe>
</div>

<style>
  .video-container {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    margin: 32px 0;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
  }

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
